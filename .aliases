}

# Generate a random secure password.
# https://unix.stackexchange.com/a/230676
function genpass {
    LC_ALL=C tr -dc 'A-Za-z0-9!"#$%&'\''()*+,-./:;<=>?@[\]^_`{|}~' </dev/urandom | head -c ${1:-32} ; echo
}
